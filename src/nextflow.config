// Nextflow configuration file

// Define execution profiles
profiles {
    local {
        executor = 'local'
        cpus = 4
        memory = '8 GB'
    }
    
    cluster {
        executor = 'slurm'
        queue = 'compute'
    }
}

// Default parameters
params {
    // Pipeline parameters
    input_dir = "${baseDir}/data"
    output_dir = "${baseDir}/results"
    
    // Resource defaults
    max_cpus = 16
    max_memory = '32.GB'
    max_time = '24.h'
}

// Process configuration
process {
    // Default resources
    cpus = 1
    memory = '2.GB'
    time = '1.h'
    
    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2
}

// Execution report
report {
    enabled = true
    file = "${params.output_dir}/execution_report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/execution_timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/execution_trace.txt"
}